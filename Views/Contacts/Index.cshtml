@model IEnumerable<PhoneBook.Models.Contact>

@{
    ViewData["Title"] = "Все контакты";
}

<h1>Контакты</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>

<form asp-controller="Contacts" asp-action="Index" method="get">
    <input type="text" name="SearchString" placeholder="Поиск по фамилии..."/>
    <input type="submit" value="Фильтр"/> 
</form>

<table class="table" aria-label="Таблица контатков">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.LastName)
            </th>
   
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
       
            <td scope="row">
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
